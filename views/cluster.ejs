<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Dashboard | Unbound MNL</title>
    <link rel="icon" href="../img/Unbound_icon.png">

    <!-- JQUERY -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/cardPages.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <!-- FUNCTIONS -->
    <script src="../js/sidebar.js"></script>
    <script>
        authCheck(" <%=authority%> ")
    </script>
</head>

<body class="body-bg">
    
    <%- include('components/navbar.ejs', {authority: authority})%>
    
    <main>
        <!-- Top navigation bar -->
        <%- include('components/topNavbar.ejs')%>

        <!-- Cluster Content -->
        <!-- Note: Temporary number of containers -->
        <div class="p-4 mt-5">
            <% const path = ["Cluster"]; %>
            <!-- const path = ["Clusters", "Cluster 1"]; -->
            <div class="custom-path">
                <% path.forEach((item) => { %>
                    <li><a href="/<%=item%>"+><%= item %></a></li>
                <% }); %>
            </div>
            <% var type = "Cluster";  %>
            <h4 class="mt-3">Clusters</h4>
            <%- include('components/cardPages.ejs', { pageParts, type }) %>
        </div>

        <%- include('components/pagination.ejs', {page, totalPages})%>
        <%- include('components/deletePopup.ejs', { pageParts, type })%>
        <script>open('partsButton')</script>
        <%-include('components/logoutPopup.ejs') %>
    </main>
</body>
</html>