<!-- Modal -->
<div class="modal modal-lg fade" id="edit<%=partname%>" tabindex="-1" aria-labelledby="edit<%=partname%>ModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="edit<%=partname%>ModalLabel">Edit <%=partname%></h1>
				<% if (partname == "User") { %>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="removeInput()"></button>
				<% } else { %>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				<% } %>
			</div>

			<form id = "edit<%=partname%>Form" class = "needs-validation editForm" name = "edit<%=partname%>Form" novalidate>
                <div class="modal-body">
					<div id = "edit<%=partname%>FormDiv">
						<% if (partname == "User") { %>
							<%-include('popupFields/AccountFormFields.ejs')%>
						<% } %>
					</div>
				</div>
				<div class="modal-footer">
					
					<% if (partname == "User") { %>
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="removeInput()">Cancel</button>
						<button type="submit" class="btn btn-primary" id = "saveChanges">Save</button>
					<% } else { %>
						<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
						<button type="submit" class="btn btn-primary">Save</button>
					<% } %>
				</div>
			</form>
		</div>
	</div>
</div>

<script>
    function removeInput() {
		const editUsernameInput = document.getElementById("editUsernameInput");
		// editUsernameInput.value = ;
        const newPass = document.getElementById("newPass");
        newPass.value = "";
		const confirmPass = document.getElementById("confirmPass");
        confirmPass.value = "";
		const matchingAlert2 = document.getElementById("matchingAlert2");
		matchingAlert2.textContent=""
    }
</script>