<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSHG">
	Add SHG
</button>

<!-- Modal -->
<div class="modal modal-lg fade" id="addSHG" tabindex="-1" aria-labelledby="addSHGModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="addSHGModalLabel">Add SHG</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>

			<form id = "addSHGForm" class ="needs-validation" name = "addSHGForm" method = "POST" action = "/" novalidate>
                <div class="modal-body">
					<div id = "addSHGFormDiv">
						<%- include('popupFields/addSHGFormFields.ejs'), {authority} %>
					</div>
				</div>
				<div class="modal-footer">
					<button type="reset" class="btn btn-danger">Reset</button>
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Save</button>
				</div>
			</form>

		</div>
	</div>
</div>