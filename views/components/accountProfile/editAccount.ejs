<div class="box-container" id="editAccount">
    <div class="edit-container">
        <div>
            <button class="btn btn-outline-secondary btn-sm mb-4" onclick="backAccount()"><i class='bx bx-arrow-back'></i> Back to Profile</button>
        </div>
        <h4>Edit Account</h4><hr>
        <div class="row">
            <div class="col-md-6">
                <div class="d-flex align-items-center button-gap">
                    <div class="change-profile" data-toggle="tooltip" data-placement="bottom" title="Change Profile Picture" data-delay="100">
                        <img src="/img/default_pfp.png" alt="profile" class="rounded-circle" width="100px" height="100px">
                        <div class="middle align-items-center rounded-circle">
                            <i class='bx bx-camera'></i>
                        </div>
                    </div>
                    <h5><%- user %></h5>
                </div>
                <button class="btn btn-danger mt-4 mb-4" data-bs-toggle="modal" data-bs-target="#deleteMemberModal">Delete Account</button>
            </div>

            <div class="col-md-6">
                <div>
                    <h6 class="edit-title">Change Username</h6>
                    <div class="p-2">
                        <span>Username</span>
                        <input type="text" class="form-control mb-4" placeholder="Username" value="<%- user %>">
                        <span>Password</span>
                        <input type="password" class="form-control mb-2">
                    </div>
                </div>
                <div>
                    <h6 class="edit-title">Change Password</h6>
                    <div class="p-2">
                        <div class="mb-2">
                            <span>Current Password</span>
                            <div class="input-group align-items-center">
                                <input type="password" class="form-control">
                                <!-- <i class='bx bx-show'></i> -->
                        </div>
                        <div class="mb-2">
                            <span>New Password</span>
                            <input type="password" id="pass" class="form-control" required onkeyup="validatePassword()">
                        </div>
                        <div class="mb-2">
                            <span>Confirm Password</span>
                            <input type="password" id="confirm_pass" class="form-control" required
                            onkeyup="validatePassword()">
                        </div>
                        <span id="matching_alert"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center button-gap mt-4">
            <button class="btn btn-secondary ml-2" onclick='cancelChanges(`<%- user %>`)'>Cancel</button>
            <button class="btn btn-primary" id="saveChanges" data-bs-toggle="modal" data-bs-target="#saveModal">Save Changes</button>
        </div>
    </div>
</div>