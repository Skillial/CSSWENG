<%- include('clusterSelect.ejs'), {authority} %>
<%- include('projectSelect.ejs'), {authority} %>

<div class = "mb-3">
    <label for="SHGName" class="form-label">Self Help Group Name</label>
    <input class="form-control" id = "SHGName" name = "SHGName" type="text" placeholder="High Cloud Quintet" aria-describedby="SHGName" required>
</div>
<div class = "mb-3">
    <label for="SHGLeaderName" class="form-label">SHG Leader Name</label>
    <div class = "input-group">
        <input class="form-control" id = "SHGLeaderName" name = "SHGLeaderName" type="text" placeholder="Jingliu" aria-describedby="SHGLeaderName" required>
        <span class = "input-group-text">Phone Number</span>
        <input class="form-control" id = "SHGLeaderPhone" name = "SHGLeaderPhone" type="tel" pattern = "[0-9]{11}" aria-describedby="SHGLeaderPhoneNumber">
        <div class="invalid-feedback">
            SHG Leader name required.
        </div>
    </div>
</div>
<div class = "mb-3">
