<div class = "mb-3">
    <label for="groupSelect" class="form-label">Self Help Group</label>
    <select class="form-select" id = "groupSelect" name = "groupSelect" aria-describedby="Select Self Help Group" autocomplete="off" required>
        <option selected disabled hidden value = "">Select Self Help Group</option>
        <option disabled>
            <% if (authority != "Treasurer") { %>
                No SHG Selected
            <% } else { %>
                Error
            <% } %>
        </option>
    </select>
    <div class="invalid-feedback">
        Please select a SHG.
    </div>      
</div>