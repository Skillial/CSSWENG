<div class="d-flex mt-4 mb-4 justify-content-between align-items-center">
    <!-- Search bar -->
    <div class="col-11 col-md-10">
        <div class="search-bar d-flex">
            <input type="text" class="form-control" placeholder="Search for ..." aria-label="Search" aria-describedby="button-addon2">
            <button class="btn btn-primary" type="button" id="button-addon2">Search</button>
        </div>
    </div>

    <!-- Add button -->
    <div class="d-flex align-items-center p-2">
        <div>
            <button type="button" class="btn btn-primary">
                <i class='bx bx-plus'></i>
                <span class="d-none d-sm-inline">Add SHG</span>
            </button>
        </div>
    </div>
</div>

<div>
    <% for (let i = 0; i < containers; i++) { %>
        <!-- Containers -->
        <div>
            <div class="container container-style mb-3">
                <h5>SHG <%=i%></h5>
                
                <div>
                    <i class='bx bxs-map'></i>
                    <span>Address</span>
                </div>
    
                <div class="container-bottom">
                    <div class="d-flex align-items-end">
                        <button type="button" class="btn btn-secondary btn-sm toggle-details" data-target="details-container<%= i %>">
                            <i class='bx bxs-chevron-down'></i> View Details
                        </button>
                        <button type="button" class="btn btn-primary btn-sm">Edit</button>
                        <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal<%= i %>">Delete</button>
                    </div>
    
                    <div>
                        <span>Total Savings:</span>
                        <h3>P1,000</h3>
                    </div>
                </div>
            </div>
            
            <% const SHGDetail = ["ABC", "DEF", "GHI", "JKL", "MNO", "PQR", "STU", "VWX", "YZ"]; %>
            <div class="d-none container details-container" id="details-container<%= i %>">
                <h6>SHG <%=i%> Details</h6>
                <div class="row">
                    <div class="col-6">
                        <span><strong>SPU:</strong> <%= SHGDetail[0] %></span><br>
                        <span><strong>Total SMs/SHG:</strong> <%= SHGDetail[1] %></span><br>
                        <span><strong>SHG Signatories:</strong> <%= SHGDetail[2] %></span><br>
                    </div>
                    <div class="col-6">
                        <span><strong>Depository Bank:</strong> <%= SHGDetail[3] %></span><br>
                        <span><strong>Account Type:</strong> <%= SHGDetail[4] %></span><br>
                        <span><strong>Account Number:</strong> <%= SHGDetail[5] %></span><br>
                        <span><strong>Treasurer:</strong> <%= SHGDetail[6] %></span><br>
                        <span><strong>Treasurer Mobile No.:</strong> <%= SHGDetail[7] %></span>
                    </div>
                </div>
            </div>            
        </div>
    <% } %>
    
</div>