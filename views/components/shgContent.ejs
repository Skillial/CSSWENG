<div class="d-flex mt-4 mb-4 justify-content-between align-items-center">
    <!-- Search bar -->
    <div class="col-11 col-md-10">
        <div class="search-bar d-flex">
            <input type="text" class="form-control" placeholder="Search for ..." aria-label="Search" aria-describedby="button-addon2">
            <button class="btn btn-primary" type="button" id="button-addon2">Search</button>
        </div>
    </div>

    <!-- Add button -->
    <div class="d-flex align-items-center p-2">
        <div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add<%=type%>">
                <i class='bx bx-plus'></i>
                <span class="d-none d-sm-inline">Add SHG</span>
            </button>
        </div>
    </div>
</div>
<%-include('addPartModal.ejs', {partname: type}) %>
<%-include('editPopup.ejs', {partname: type}) %>

<div>
    <% for (let i = 0; i < pageParts.length; i++) { %>
        <!-- Containers -->
        <div class="container container-style mb-3">
            <h5>SHG <%= pageParts[i].name %></h5>

            <div>
                <i class='bx bxs-map'></i>
                <span><%= pageParts[i].area %></span>
            </div>

            <div class="container-bottom">
                <div class="d-flex align-items-end">
                    <button type="button" class="btn btn-secondary btn-sm toggle-details" data-target="details-container<%= i %>">
                        <i class='bx bxs-chevron-down'></i> View Details
                    </button>
                    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#edit<%=type%>" data-bs-name="<%=pageParts[i].name%>">Edit</button>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal<%= i %>">Delete</button>
                </div>

                <div>
                    <span>Total Savings:</span>
                    <h3>P <%= pageParts[i].totalKaban %></h3>
                </div>
            </div>
        </div>

        <div class="d-none container details-container" id="details-container<%= i %>">
            <h6>SHG <%= pageParts[i].name %> Details</h6>
            <div class="row">
                <div class="col-6">
                    <span><strong>SPU:</strong> <%= pageParts[i].SPU %></span><br>
                    <span><strong>Total SMs/SHG:</strong> <%= pageParts[i].totalMembers %></span><br>
                    <span><strong>SHG Signatories:</strong>
                        <% for (let j = 0; j < pageParts[i].signatories.length; j++) { %>
                            <%= `${pageParts[i].signatories[j].firstName} ${pageParts[i].signatories[j].middleName} ${pageParts[i].signatories[j].lastName}` %>
                            <% if (j < pageParts[i].signatories.length - 1) { %>,
                            <% } %>
                        <% } %>
                        </span><br>
                </div>
                <div class="col-6">
                    <span><strong>Depository Bank:</strong> <%= pageParts[i].depositoryBank %></span><br>
                    <span><strong>Account Type:</strong> <%= pageParts[i].bankAccountType %></span><br>
                    <span><strong>Account Number:</strong> <%= pageParts[i].bankAccountNum %></span><br>
                    <!-- Add treasurer details here -->
                </div>
            </div>
        </div>
    <% } %>
</div>
