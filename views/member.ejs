<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('components/headers.ejs', {authority, pageName: "Members"})%>
    
    <script src="/js/IDchecker.js"></script>
    <script src="/js/membersTable.js"></script>
    
    
    <!-- DATATABLES -->
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/fc-4.3.0/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/fc-4.3.0/datatables.min.js"></script>
    
</head>

<body class="body-bg">
    
    
    <%- include('components/navbars/navbar.ejs', {authority: authority})%>
    
    <main>
        <!-- Top navigation bar -->
        <%- include('components/navbars/topNavbar.ejs')%>

        <!-- SHG Content -->
        <!-- Note: Temporary number of containers -->
        <% const containers = 6; %>
        <div class="p-4 mt-5">
            <% const path = ["Clusters", "Sub-Projects", "SHG"]; 
                var pathLink; %>

            <div class="custom-path">
                <% path.forEach((item) => { 
                    if (item=="Clusters"){
                        pathLink="/cluster"
                    } else if (item=="Sub-Projects"){
                        pathLink="/project"
                    } else if (item=="SHG"){
                        pathLink="/group"
                    } %>
                    <li><a href="<%=pathLink%>"><%=item%></a></li>
                <% }); %>
            </div>
            
            <div class="mt-3 page-title">
                <p>Cluster # SP # Group #</p>
                <h4><%=grpName%> Members</h4>
            </div>
             
            <% var type = "Member";  %>
            <div class="d-flex mt-4 mb-4 justify-content-between align-items-center">
             
                <div class="col-11 col-md-10">
                    <div class="search-bar d-flex">
                        <input type="text" class="form-control" placeholder="Search for ..." aria-label="Search" aria-describedby="button-addon2" id="searchBar">
                    </div>
                </div>
                
                <%-include('components/orgPartViews/addButton.ejs', {type})%>
            </div>

            <div>
                <select onchange="reloadTable(this.value)" autocomplete="off">
                    <option value="2023" selected default>this year</option>
                    <option value="2023">prev year</option>
                    <option value="2022">year before ^</option>
                    <option value="2021">a</option>
                    <option value="2020">1</option>
                </select>
            </div>
            <div id = "table_div">
                <%- include('components/orgPartViews/membersTable.ejs', { pageParts, type}) %>
            </div>
        </div>

        <script>open('partsButton')</script>
        <%-include('components/popups/logoutPopup.ejs') %>
        <%-include('components/popups/addPartModal.ejs', {authority, partname: type}) %>

</body>
</html>